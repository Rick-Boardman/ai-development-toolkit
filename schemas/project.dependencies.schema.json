{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ADT Dependencies State",
  "type": "object",
  "required": ["schemaVersion", "dependencies"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": { "type": "string", "minLength": 1 },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["leaf", "addedAt"],
        "additionalProperties": false,
        "properties": {
          "leaf": { "type": "string", "minLength": 1 },
          "path": { "type": "string" },
          "addedAt": { "type": "string" },
          "notes": { "type": "string" }
        }
      }
    }
  }
}
