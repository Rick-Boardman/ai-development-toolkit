{
  "kind": "leaf",
  "name": "adt",
  "description": "AI Development Toolkit - governance + reconciliation engine",
  "upgradeVerification": {
    "commands": [
      {
        "name": "ADT CLI help",
        "shell": "powershell",
        "command": "& '<repoRoot>\\_core\\adt\\adt.ps1' help -ProjectRoot '<repoRoot>'"
      },
      {
        "name": "ADT reconcile dry-run",
        "shell": "powershell",
        "command": "& '<repoRoot>\\_core\\adt\\adt.ps1' reconcile -ProjectRoot '<repoRoot>' -DryRun"
      }
    ]
  }
}
